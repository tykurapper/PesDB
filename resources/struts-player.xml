<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- Configure NameSpace for action web -->
	<package name="Player" namespace="/player" extends="default-web">
		<action name="findPlayerByName" class="springPlayerAction" method="findPlayerByName">
			<result name="success">Player.Show</result>
		</action>
		
		<action name="findPlayerByNation" class="springPlayerAction" method="findPlayerByNation">
			<result name="success">Player.Show</result>
		</action>
		
		<action name="findPlayerByRegion" class="springPlayerAction" method="findPlayerByRegion">
			<result name="success">Player.Show</result>
		</action>
		
		<action name="addPlayer" class="springPlayerAction" method="addPlayer">
			<result name="success">HomePage</result>
		</action>
		
		
	</package>
</struts>