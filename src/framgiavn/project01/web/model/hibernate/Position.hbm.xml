<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="framgiavn.project01.web.model.Position" table="Position" 
		dynamic-insert="true" dynamic-update="true">
		<id name="position_id" type="java.lang.Integer">
			<column name="position_id" length="10" />
			<generator class="increment" />
		</id>
		
		<property name="name" type="java.lang.String"/>
		
		<set name="players" table="player_position">
			<key column="position_id"/>
			<many-to-many class="framgiavn.project01.web.model.Player" column="player_id"></many-to-many>
		</set>
		
	</class>
</hibernate-mapping>